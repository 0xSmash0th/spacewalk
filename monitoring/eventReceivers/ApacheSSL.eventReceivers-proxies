use NOCpulse::Config;
my $npconfig = NOCpulse::Config->new;
my $notifServer = $npconfig->val('hosts','notif');
my $satconfigServer = $npconfig->val('hosts','satconfig');
my $scdbServer = $npconfig->val('hosts','scdb');
my $smonServer = $npconfig->val('hosts','smon');
my $tsdbServer = $npconfig->val('hosts','tsdb');
my $vs = $self->virtualServer('_default_:443');
$self->addProxy($vs,'^/notification$',"http://$notifServer/cgi-bin/notifserver.cgi");
$self->addProxy($vs,'^styles.css$',"http://$notifServer/styles.css");
$self->addProxy($vs,'^/satconfig/depot/(.*)','http://depot/\$1');
$self->addProxy($vs,'^/depot/(.*)','http://depot/$1');
$self->addProxy($vs,'^/satconfig/(.*)',"http://$satconfigServer/\$1");
