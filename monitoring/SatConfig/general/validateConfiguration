#!/usr/bin/perl
use NOCpulse::Object;
use lib qw(/etc/rc.d/np.d);
use NOCpulse::Config;
use PhysCluster;
$Object::config = NOCpulse::Config->new('/etc/rc.d/np.d/SysV.ini');
Object->defaultDebugObject->addstream(LEVEL=>1);
Object->dprint(0,"Parsing configuration file...\n\n");
my $config = PhysCluster->newInitialized;
Object->dprint(0,"\nVerifying validity of system configuration...\n\n");
if ( $config->isValid() ) {
	Object->dprint(0,"\nConfiguration is valid\n\n");
} else {
	Object->dprint(0,"\nConfiguration is INVALID\n\n");
}
