#!/usr/bin/perl

use strict;

use POSIX;
use NOCpulse::TimeSeriesQueue;
use NOCpulse::StateChangeQueue;
use NOCpulse::NotificationQueue;
use NOCpulse::Gritch;
use NOCpulse::Config;
use NOCpulse::Debug;
use NOCpulse::TimeSeriesDatapoint;
use NOCpulse::StateChange;
use NOCpulse::Notification;

my $cfg = new NOCpulse::Config;
my $debug = new NOCpulse::Debug();
my $debugstream = $debug->addstream(LEVEL => 9);
my $gritcher = new NOCpulse::Gritch($cfg->get('queues', 'gritchdb'));

my $tsq = TimeSeriesQueue->new( Debug => $debug, Config => $cfg, Gritcher => $gritcher );
my $scq = StateChangeQueue->new( Debug => $debug, Config => $cfg, Gritcher => $gritcher );
my $notifq = NotificationQueue->new( Debug => $debug, Config => $cfg, Gritcher => $gritcher );

while(1)
{
    my $ts = TimeSeriesDatapoint->newInitialized();
    $ts->oid('testts');
    $ts->t(time());
    $ts->v(floor(rand(100)));
    
    $tsq->enqueue($ts);
    
    my $sc = StateChange->newInitialized();
    $sc->oid('testsc');
    $sc->t(time());
    $sc->state('OK');
    $sc->desc('fantastic');
    
    $scq->enqueue($sc);

    my $notif = Notification->newInitialized();
    $notif->TIMESTAMP(time());
    $notif->DESTNAME('asdf');
    $notif->HOSTNAME('jelly');
    $notif->HOSTPROBEID(34);
    $notif->HOSTADDR('234.3.3.2');
    $notif->CHECK_COMMAND(234);
    $notif->command_long_name('foo foo');
    $notif->probeGroupName('bar');
    $notif->physicalLocationName('asdf**');
    $notif->osName('linux');
    $notif->netsaintId(10072);

    $notifq->enqueue($notif);
    
    sleep(10);
}









