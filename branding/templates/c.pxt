<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<pxt-passthrough>
  <pxt-use class="Sniglets::Users" />
  <pxt-use class="Sniglets::HTML" />
  <pxt-use class="Grail::Frame" />
  <pxt-use class="Sniglets::Navi" />

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <pxt-include-late file="/templates/header.pxt" />

  <body><div class="wrap" id="top-wrap">
  <rhn-browser-css-compliance at_most="0">
    <div id="broken-browser-warning">
      <h1>
        You are using an unsupported browser.
      </h1>
      <a href="/help/browser-info.pxt">More Info</a>
    </div>
  </rhn-browser-css-compliance>
    <rhn-navi-nav depth="0" style="topnav"/>
    <pxt-include-late file="/network/components/status_bar/main.pxi" />
    </div>
    <div class="wrap" id="bottom-wrap">
  <div id="content">
    <table width="100%" cellspacing="0">
      <tr>
        <td class="sidebar">
	<grail-canvas mode="left_menu_canvas">
          <rhn-navi-nav depth="1" style="sidenav"/>
	</grail-canvas>
<rhn-browser-css-compliance at_least="1">
	<grail-canvas mode="legend_canvas">
	</grail-canvas>
</rhn-browser-css-compliance>

<rhn-require acl="user_authenticated(); not global_config(satellite); user_role(org_admin)">
	<grail-canvas mode="buy_now">
          <div class="buy-now">
            <a href="/rhn/account/SubscriptionManagement.do"><img src="/img/buy_now_rhn.png" alt="Buy Now: add systems, renew service, manage and provision"/></a>
          </div>
          <div class="buy-now">
            <a href="/rhn/software/downloads/SupportedISOs.do"><img src="/img/software_downloads_rhn.gif" alt="Software dowloads"/></a>
          </div>
	</grail-canvas>
</rhn-require>

<rhn-require acl="not user_authenticated(); not global_config(satellite)">
	<grail-canvas mode="buy_now">
          <div class="buy-now">
            <a href="/rhn/account/SubscriptionManagement.do"><img src="/img/buy_now_rhn.png" alt="Buy Now: add systems, renew service, manage and provision" /></a>
          </div>
	</grail-canvas>
</rhn-require>

	</td>
        <td class="page-content" width="100%">
<pxt-include-late file="/network/components/message_queues/site.pxi" />

<grail-early-canvas mode="main_canvas">
</grail-early-canvas>

	</td>
      </tr>
    </table>

    <pxt-include-late file="/templates/footer.pxt" />
    <pxt-include-late file="/templates/profile.pxt" />

  </div> <!-- close content -->
  </div> <!-- close wrap -->

  </body>
</html>

</pxt-passthrough>
