%post --interpreter /usr/bin/python
import xmlrpclib
import os
import os.path
system_id = "/root/systemid.old"
try:

    new_keys = "$redhat_management_key"
    for key in new_keys.split(','):
        if key.startswith('re-'):
            os.exit(0)
    if os.path.exists(system_id):
        client =  xmlrpclib.Server("http://$http_server/rpc/api")
        key = client.system.obtain_reactivation_key(open(system_id).read())
        f = open("/tmp/key","w")
        f.write(key)
        f.close()
except:
    # xml rpc due to  a old/bad system id
    # we don't care about those
    # we'll register those as new. 
    pass

