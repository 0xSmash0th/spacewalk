<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.redhat.rhn.domain.iss.IssSlaveOrgs"
        table="rhnissslaveorgs" >
        <id name="id" type="long" column="ID">
            <meta attribute="scope-set">protected</meta>
            <generator class="sequence">
                <param name="sequence">rhn_issslave_org_seq</param>
            </generator>
        </id>
        <property name="slaveId" column="SLAVE_ID"  type="long" />
        <property name="orgId" column="ORG_ID"  type="long" />
        <property name="created" column="CREATED"  type="timestamp" insert="false" update="false"/>
    </class>

    <query name="IssSlaveOrgs.removeAll">
        <![CDATA[delete com.redhat.rhn.domain.iss.IssSlaveOrgs so where so.slaveId = :sid]]>
    </query>

</hibernate-mapping>
