<?xml version="1.0"?>
<rhn-navi-tree label="manage_errata" invisible="1" formvar="eid" title-depth="1" acl_mixins="RHN::Access::Errata">
  <rhn-tab name="Details">
    <rhn-tab-url>/network/errata/manage/edit.pxt</rhn-tab-url>
  </rhn-tab>
  <rhn-tab name="Channels" acl="errata_published()">
    <rhn-tab-url>/network/errata/manage/select_channels.pxt</rhn-tab-url>
  </rhn-tab>
  <rhn-tab name="Packages" acl="errata_exists()" on-click="Sniglets::Lists->navi_empty_set" node-id="remove_errata_packages">
    <rhn-tab-url>/network/errata/manage/packages/index.pxt</rhn-tab-url>
    <rhn-tab name="List / Remove" on-click="Sniglets::Lists->navi_empty_set" node-id="remove_errata_packages">
      <rhn-tab-url>/network/errata/manage/packages/package_list.pxt</rhn-tab-url>
      <rhn-tab-url>/network/errata/manage/packages/remove_confirm.pxt</rhn-tab-url>
    </rhn-tab>
    <rhn-tab name="Add" on-click="Sniglets::Lists->navi_empty_set" node-id="add_errata_packages">
      <rhn-tab-url>/network/errata/manage/packages/add.pxt?view_channel=any_channel</rhn-tab-url>
      <rhn-tab-url>/network/errata/manage/packages/add.pxt</rhn-tab-url>
      <rhn-tab-url>/network/errata/manage/packages/add_confirm.pxt</rhn-tab-url>
    </rhn-tab>
  </rhn-tab>
</rhn-navi-tree>

