<rhn-interface name="auth">
  <rhn-method name="login">
    <description>Get an auth session id.  Duration is in seconds, and cannot be more than 3600 (1 hour).</description>
    <handler class="Sniglets::API::Auth" method="login" />

    <param name="username" required="1" type="string" />
    <param name="password" required="1" type="string" />
    <param name="duration" default="300" type="integer" />

    <return type="session" />
  </rhn-method>
</rhn-interface>
